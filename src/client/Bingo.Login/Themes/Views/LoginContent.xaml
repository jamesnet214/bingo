<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Jamesnet.Wpf.Controls;assembly=Jamesnet.Wpf"
    xmlns:views="clr-namespace:Bingo.Login.UI.Views">
    <Style TargetType="{x:Type views:LoginContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:LoginContent}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <controls:JamesGrid Columns="*" Rows="auto, auto, auto,auto">
                            <TextBox Grid.Row="0" />
                            <TextBox Grid.Row="1" />
                            <Button
                                Grid.Row="2"
                                Command="{Binding LoginCommand}"
                                Content="LOGIN" />
                            <Label Grid.Row="3" Content="zzzz" />
                        </controls:JamesGrid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
